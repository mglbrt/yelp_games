<%- include("partials/header") %>


<div class="container">
	<div class="row mt-4">
		<div class="col-6 show_image-container">
			<img src="<%= game.image_link %>">
		</div>
		<div class="col-6 show_details-container">
			<h1><%= game.title %></h1>
			<p><%= game.description %></p>
			
	<table class="table table-dark">

			  <tbody>
				<tr>
				  <th scope="row">Company:</th>
				  <td><%= game.company %></td>
				 
				</tr>
				<tr>
				  <th scope="row">Publisher:</th>
				  <td><%= game.publisher %></td>
				  
				</tr>
				<tr>
				  <th scope="row">Release Date:</th>
				  <td><%= game.releaseDate %></td>
				  
				</tr>
				  <tr>
				  <th scope="row">Series:</th>
				  <td><%= game.series %></td>
				  
				</tr>
				  <tr>
				  <th scope="row">Genre:</th>
				  <td><%= game.genre %></td>
				  
				</tr>
				   <tr>
				  <th scope="row">Rating:</th>
				  <td><%= game.rating %></td>
				  
				</tr>
				   <tr>
				  <th scope="row">Platform:</th>
				  <td><%= game.platform %></td>
				  
				</tr>
			  </tbody>
			</table>
			<a href="/videogames/<%= game._id %>/edit">
			<button class="btn btn-outline-info btn-lg btn-block mb-2">Edit Game Info</button>
			</a>
			<form action="/videogames/<%= game._id %>?_method=DELETE" method="POST" >
			<button type="submit" class="btn btn-outline-danger btn-lg btn-block">Delete Game From Database</button>
			</form>
		</div>
	</div>
	<div class="row show_comment-header mt-3">
		Comment Header
	</div>
	<a href="/videogames/<%=game._id%>/comments/new">
	<button class="btn btn-success btn-lg mt-3 mb-4">Add Comment</button>
	</a>
	<% comments.forEach((comment => { %>
		<div class="row show_comment-container py-2 border">
			<div class="col-2 border-right my-auto">
				<%= comment.user.username %>
			</div>
			<div class="col-8 my-auto">
				<%= comment.text %>
			</div>
			<div class="col-2 border-right my-auto d-flex flex-wrap justify-content-center">
				<a class="btn btn-sm btn-success w-75 p-0 my-1" href="/videogames/<%= game._id %>/comments/<%=comment._id%>/edit">Edit</a>
				<form class="w-75 my-1" action="/videogames/<%= game._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
					<button class="btn btn-sm btn-danger w-100 p-0">
						Delete
					</button>
				</form>
			</div>
		</div>
	<% })) %>
	<div class="py-5"></div>
</div>


<%- include('partials/footer') %>